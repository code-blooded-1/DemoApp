<h1 class="text-center mt-4">Log in</h1>

<%= link_to "Logout", logout_path, method: :delete, data: { turbo_method: :delete} %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 rounded") do |f| %>
        <%= f.label :name, class: "col-2 col-form-label text-dark" %>
        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter your name" %>

        <%= f.label :password, class: "col-2 col-form-label text-dark" %>
        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>

        <%= f.submit "Log in", class: "mt-4 btn btn-outline-dark btn-lg" %>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to 'Back to users', users_path, class: "text-info" %>
    </div>
  </div>
</div>